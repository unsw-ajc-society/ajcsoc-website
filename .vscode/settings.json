{
	// ref: https://code.visualstudio.com/docs/getstarted/settings#_workspace-settings
	"[javascript][typescript][javascriptreact][typescriptreact][json][jsonc][css]": {
		"editor.defaultFormatter": "biomejs.biome"
	},

	// Enable word wrap for message files
	"[json]": {
		"editor.wordWrap": "on"
	},

	"editor.formatOnPaste": true,
	"editor.formatOnSave": true,

	"files.associations": {
		".dev.vars": "properties",
		".tool-versions": "plaintext"
	},

	"files.autoSave": "afterDelay",

	"files.readonlyInclude": {
		// Disallow editing of auto-generated files
		"**/bun.lock": true,
		"**/cloudflare-env.d.ts": true
	},

	// Force VS Code to use the local TypeScript
	"typescript.disableAutomaticTypeAcquisition": true,
	"typescript.tsdk": "node_modules/typescript/lib"
}
