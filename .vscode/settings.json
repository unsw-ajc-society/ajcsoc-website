{
	// ref: https://code.visualstudio.com/docs/getstarted/settings#_workspace-settings
	"[javascript][typescript][javascriptreact][typescriptreact][json][jsonc][css]": {
		"editor.defaultFormatter": "biomejs.biome"
	},

	"editor.formatOnPaste": true,
	"editor.formatOnSave": true,

	"files.associations": {
		".dev.vars.example": "properties"
	},

	"files.autoSave": "afterDelay",

	"files.readonlyInclude": {
		// Disallow editing of auto-generated files
		"**/bun.lock": true,
		"**/cloudflare-env.d.ts": true
	},

	// Force VS Code to use the local TypeScript
	"typescript.disableAutomaticTypeAcquisition": true,
	"typescript.tsdk": "node_modules/typescript/lib"
}
